# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/employee_management

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random_for_development
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_make_it_long_and_random_for_development
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Google OAuth Configuration
# For development/demo purposes, you can use these test credentials
# In production, replace with your REAL credentials from Google Cloud Console
# Get these from: https://console.cloud.google.com/ → APIs & Services → Credentials

# Demo Google OAuth credentials (for testing purposes only)
GOOGLE_CLIENT_ID=demo-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=demo-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# Production Google OAuth credentials (uncomment and use your real credentials)
# GOOGLE_CLIENT_ID=YOUR_REAL_CLIENT_ID_HERE.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=YOUR_REAL_CLIENT_SECRET_HERE
# GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# Frontend URL
FRONTEND_URL=http://localhost:3000